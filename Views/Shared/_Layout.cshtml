    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted" style="background-color: #4A7F4F;">
        <div class="container text-light text-center">
            &copy; 2025 - EspacoVerde
        </div>
    </footer>


