    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #4A7F4F;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/vendor/icons/IconeComFundo.svg")" alt="icone Espaço verde"
                         style="height: 50px; width: 50px;">  EspaçoVerde
                </a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="color: white">
                    <span class="navbar-toggler-icon" style="color: white"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-area="" asp-controller="Home" asp-action="Index">Plataforma</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-area="" asp-controller="CadastroProduto"
                               asp-action="Index">Venda seu produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-area="" asp-controller="Home"
                               asp-action="SobreNos">Sobre Nós</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    

